</head>

<body>
    <header>
        <%- include('../layout/header.ejs') %>
    </header>
    <main>
        <div id="profileMain">
            <%- include('../layout/main-load.ejs') %>
        </div>
        <div class="container">
            <div id="profileImg-details">
                <div>
                    <img src="images/user.svg" id="profilePic" />
                </div>
                <div id="profileDBdetails">
                    <!-- main-details: name, email, password -->
                    <h2>Main Details:</h2>
                    <% if(user.userDetailsB){ %>
                        <h3>
                            Name:
                            <%= user.userDetailsB.user_name %>
                        </h3>
                        <h4>
                            Email:
                            <%= user.userDetailsB.email %>
                        </h4>
                        <% }else{ %>
                            <h3 id="UN">
                                Name:
                                <%= user.userDetailsA.user_name %>
                            </h3>
                            <h4>
                                Email:
                                <%= user.userDetailsA.email %>
                            </h4>

                            <i id="ST" style="display: none;"> <%= statue %> </i>

                            <% } %>
                </div>
            </div>

            <section id="formsProfileContainer">
                <button type="submit" id="work-button">
            Update My info <span id="updateInfoToggleBtn"></span>
          </button>

                <form class="well form-horizontal hide" action="/update" method="post" id="contact_form">
                    <!-- Form Name -->
                    <fieldset>
                        <section class="section">
                            <div>
                                <!-- more-details: gender, spelize, education, bio  -->
                                <h2>More Details:</h2>
                                <% if(user.userDetailsA){ %>
                                    <h4>
                                        <%= user.userDetailsA.gender %>
                                    </h4>
                                    <h4>
                                        <%= user.userDetailsA.education %>
                                    </h4>
                                    <h4>
                                        <%= user.userDetailsA.major %>
                                    </h4>
                                    <p>
                                        <%= user.userDetailsA.bio %>
                                    </p>
                                    <% } %>
                            </div>
                            <div class="form-group">
                                <label class="col-md-4 control-label">Gender</label>
                                <div class="col-md-4 inputGroupContainer">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fas fa-venus-mars"></i
                      ></span>
                                        <input type="text" name="gender" placeholder="Gender" class="form-control" />
                                    </div>
                                </div>
                            </div>

                            <!-- Text input-->

                            <div class="form-group">
                                <label class="col-md-4 control-label">Major</label>
                                <div class="col-md-4 inputGroupContainer">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fal fa-user-crown"></i
                      ></span>
                                        <input type="text" name="major" placeholder="Major" class="form-control" />
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-md-4 control-label">Education</label>
                                <div class="col-md-4 inputGroupContainer">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fas fa-user-graduate"></i>
                      </span>
                                        <input type="text" name="education" placeholder="Education" class="form-control" />
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-md-4 control-label">Twitter</label>
                                <div class="col-md-4 inputGroupContainer">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fab fa-twitter"></i
                      ></span>
                                        <input type="text" name="twitar" placeholder="Twitter link" class="form-control" />
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-md-4 control-label">GitHub</label>
                                <div class="col-md-4 inputGroupContainer">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fab fa-github-alt"></i
                      ></span>
                                        <input type="text" name="gitHub" placeholder="GitHub link" class="form-control" />
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-md-4 control-label">LinkedIn</label>
                                <div class="col-md-4 inputGroupContainer">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fab fa-linkedin-in"></i
                      ></span>
                                        <input type="text" name="linkedIn" placeholder="LinkedIn link" class="form-control" />
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-4 control-label">Bio</label>
                                <div class="col-md-4 inputGroupContainer">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fas fa-file-prescription bioIcon"></i
                      ></span>
                                        <textarea class="form-control" name="bio " placeholder="Bio"></textarea>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-md-4 control-label"></label>
                                <div class="col-md-4">
                                    <button type="submit" id="work-button">
                      Save Changes
                      <span class="glyphicon glyphicon-send"></span>
                    </button>
                                </div>
                            </div>
                        </section>
                    </fieldset>
                </form>

                <button type="submit" id="work-button">
            Update My Post <span class="glyphicon glyphicon-send"></span>
          </button>
