<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <title>Quizzat</title>
</head>

<body>
    <header>

    </header>
    <main>
        <div>
            <img src="images/test-img.jpg" style="border-radius: 50%;">
        </div>
        <div> <!-- main-details: name, email, password -->
            <h2>Main Details:</h2>
            <% if(user.userDetailsB){ %>
                <h3 id="UN"><%=user.userDetailsB.user_name%></h3>
                <h4> <%= user.userDetailsB.email %> </h4>
          <%  }else if(user.userDetailsA){ %>
                <h3 id="UN"><%=user.userDetailsA.user_name%></h3>
                <h4> <%= user.userDetailsA.email %> </h4>
        <%  } 
        if(statue){ %>
            <i id="ST" style="display: none;"><%=statue%></i>
    <%  } %>
 
        </div>
        <div> <!-- more-details: gender, spelize, education, bio  -->
            <h2>More Details:</h2>
            <% if(user.userDetailsA){ %>
                <h4> <%= user.userDetailsA.gender %> </h4> 
                    <h4> <%= user.userDetailsA.education %> </h4>
                    <h4> <%= user.userDetailsA.major %> </h4>
                    <p> <%= user.userDetailsA.bio %> </p>
          <%  } %>
        </div>
        <div> <!-- certifcates -->
            <h1>My Certificates</h1>
            <% if(user.uCretri){
                user.uCretri.forEach(item=>{ %>
                   <div>
                       <img src="<%= item.img_url %>" alt="">
                    <h5>Master Of <%= item.certificat_name %> </h5>
                    <h3> <%= item.mark %> </h3>
                    <h2> <%= item.result %> </h2>
                    <p><%= item.date %></p>
                   </div>
           <%  })     
                
            } %>
        </div>

        <div> <!-- Contact Me -->
            <h2>Contact Me:</h2>
            <% if(user.userDetailsA){ %>
            <h4> <%= user.userDetailsA.twitar %> </h4>
                <h4> <%= user.userDetailsA.github %> </h4>
                <h4> <%= user.userDetailsA.linkedin %> </h4>
        <%  } %>
        </div>
       
            <button>Update My Info</button>
            

                <form action="/update" method="post">

                <label for="">Gender:<input type="text" name="gender"></label>
                <label for="">Major:<input type="text" name="major"></label>
                <label for="">Bio:<input type="text" name="bio"></label>
                <label for="">Education:<input type="text" name="education"></label>
                <label for="">Twitar:<input type="text" name="twitar"></label>
                <label for="">GitHub:<input type="text" name="gitHub"></label>
                <label for="">LinkedIn:<input type="text" name="linkedIn"></label>

                <button type="submit">Save</button>
        
                </form> 
            
            <button>Update My HireMe Post</button>

                <form action="/updateHireMe" method="post">

                <!-- <label for="">YourName:<input type="text" name="user_name" value=""></label> -->
                <label for="">Education:<input type="text" name="education" value=""></label>
                <label for="">Major:<input type="text" name="major" value=""></label>
                <label for="">Email:<input type="text" name="email" value=""></label>
                <label for="">Twitar:<input type="text" name="twitar" value=""></label>
                <label for="">GitHub:<input type="text" name="github" value=""></label>
                <label for="">LinkedIn:<input type="text" name="linkedIn" value=""></label>
                <label for="">Describion:<textarea rows="10" cols="25" type="text" name="descr" value=""></textarea></label>

                <button type="submit">Save</button>
        
                </form>
            <button>Delete My Profile</button>

    </main>
    <script src="/javascript/app.js"></script>
</body>
</html>