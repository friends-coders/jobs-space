                                        <span class="input-group-addon"><i class="fab fa-github-alt"></i
                      ></span>
                                        <input type="text" name="gitHub" placeholder="GitHub link" class="form-control" />
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-md-4 control-label">LinkedIn</label>
                                <div class="col-md-4 inputGroupContainer">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fab fa-linkedin-in"></i
                      ></span>
                                        <input type="text" name="linkedIn" placeholder="LinkedIn link" class="form-control" />
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-4 control-label">Bio</label>
                                <div class="col-md-4 inputGroupContainer">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fas fa-file-prescription bioIcon"></i
                      ></span>
                                        <textarea class="form-control" name="descr" placeholder="Post Content"></textarea>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-md-4 control-label"></label>
                                <div class="col-md-4">
                                    <button type="submit" id="work-button">
                      Save Changes
                      <span class="glyphicon glyphicon-send"></span>
                    </button>
                                </div>
                            </div>
                        </section>
                    </fieldset>
                </form>
            </section>

            <section id="flex-section-profile">
                <section>
                    <!-- certifcates -->
                    <div>
                        <h2>My Certificates</h2>
                        <% if(user.uCretri){ user.uCretri.forEach(item=>{ %>
                            <div>
                                <div class="card">
                                    <div class="additional">
                                        <img src="<%= item.img_url %>" alt="" />
                                    </div>
                                    <div class="general">
                                        <h3>
                                            <%= item.certificat_name %>
                                        </h3>
                                        <br />
                                        <h4>USER NAME</h4>
                                        <p>
                                            <b>Mark:</b>
                                            <%= item.mark %>
                                        </p>
                                        <span class="more"><b>Date issued: </b> <%= item.date %></span
                    >
                  </div>
                  <% }) }%>
                </div>
              </div>
            </div>
          </section>

          <!-- rrrrrr -->

          <!-- rrrrrr -->

          <section id="ffff">
            <div>
              <!-- Contact Me -->
              <h2>Contact Me:</h2>
              <% if(user.userDetailsA){ %>
              <h4>
                Twitter: <%= user.userDetailsA.twitar %>
              </h4>
              <h4>
                GitHub: <%= user.userDetailsA.github %>
              </h4>
              <h4>
                LinkedIn: <%= user.userDetailsA.linkedin %>
              </h4>
              <% } %>
            </div>
          </section>
        </section>
      </div>

      <footer>
        <%- include('../layout/footer.ejs') %>
      </footer>
